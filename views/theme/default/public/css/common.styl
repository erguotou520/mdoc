$color-primary = #1BCD57
.text-primary
  color $color-primary
#app
  height 100%
#app-header
  height 3.375rem
  background-color #579CE0
  color #fff
  .nav-menu
    width 62.5rem
    margin 0 auto
    h1
      font-size 16px
      line-height 1.75rem
    h2
      font-size 12px
    .navs
      li
        position relative
        width 5rem
        text-align center
        cursor pointer
        &::after
          content ''
          position absolute
          width 100%
          left 0
          bottom 0
          height 4px
          background-color #fff
          opacity 0
          transition opacity .3s
        &:hover::after
        &.active::after
          opacity 1
        a
          color #f1f1f1
          transition all .3s
          &:hover
            color #fff
#app-container
  width 62.5rem
  margin 0 auto
#app-navigation
  width 7.5rem
  padding 1rem 0
  background-color #122D47
  color #fff
  overflow-y auto
  ul
    width 100%
  li
    height 2rem
    padding 0 1rem
    line-height @height
    a
      color #f1f1f1
      transition all .3s
      &:hover
        color #fff
#app-content
  padding 1.5rem
  background-color #fff
  h3 + p
    margin-top 1rem
  p + h3
    margin-top 1.25rem
  p + ul
    margin-top .5rem
  ul + p
    margin-top .5rem
  h3
    position relative
    font-size 16px
    cursor pointer
    .href
      float left
      margin-left -.5rem
      opacity 0
    &:hover
      .href
        opacity 1
  ul
    list-style dotted
  li
